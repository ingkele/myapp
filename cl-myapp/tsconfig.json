{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false, //忽略any类型
    "allowJs": true, //允许ts文件使用js写法
    "noUnusedLocals": false,
    "strictNullChecks": false, //允许出现null或undefined的可能性。
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      // 根据别名配置相关路径
      "@/*": [
        "./src/*"
      ],
      "@page/*": [
        "./src/page/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@assets*": [
        "./src/assets/*"
      ],
      "@router*": [
        "./src/router/*"
      ],
    }
  },
  "include": [
    "src/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
  ],
}